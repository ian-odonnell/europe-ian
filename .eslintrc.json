{
  // Don't look further up in the directory tree for another config file - this is the project/solution root
  "root": true,
  "extends": [
    "eslint:recommended",

    // ES6 imports
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    // Overrides
    "no-console": 1, // 0: Off, 1: Warning, 2: Error
    "react/jsx-uses-vars": 1,
    "react/react-in-jsx-scope": 1
  },
  "globals": {
    "$": true
  }
}
